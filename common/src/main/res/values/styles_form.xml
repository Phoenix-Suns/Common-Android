<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--https://www.google.com/design/spec/componemessagetext-fields.hmessagetext-fields-single-lmessagetext-field-->

    <!--Kích thước Form-->
    <dimen name="common_form_paddingTop">12dp</dimen>
    <dimen name="common_form_paddingBottom">8dp</dimen>
    <dimen name="common_form_padding_horizontal">12dp</dimen>
    <dimen name="common_form_icon_size">24dp</dimen>
    <dimen name="common_form_icon_margin_vertical">12dp</dimen>
    <dimen name="common_form_icon_marginRight">36dp</dimen>


    <!-- Title + Input Type -->
    <!-- Group Input - Gồm cả Title+Input -->
    <style name="Common.FormContent">
        <item name="android:paddingBottom">@dimen/common_form_paddingBottom</item>
    </style>


    <!-- Left Icon (+ Input Form) -->
    <style name="Common.FormIcon">
        <item name="android:layout_width">@dimen/common_form_icon_size</item>
        <item name="android:layout_height">@dimen/common_form_icon_size</item>
        <item name="android:layout_marginTop">@dimen/common_form_paddingTop</item>
        <item name="android:layout_marginLeft">@dimen/common_form_padding_horizontal</item>
        <item name="android:layout_marginRight">@dimen/common_form_padding_horizontal</item>
    </style>


    <!-- Form Label -->
    <style name="Common.FormLabel">
        <item name="android:paddingTop">@dimen/common_form_paddingTop</item>
        <item name="android:textSize">@dimen/common_text_caption</item>
        <item name="android:textColor">@color/common_textHint_light</item>
    </style>


    <!-- Form Input -->
    <style name="Common.FormInput">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/selector_text_color</item>
        <item name="android:background">@drawable/selector_background</item>
        <item name="android:gravity">start|fill_vertical</item>
        <item name="android:minHeight">0dp</item>
    </style>
    <style name="Common.FormInput.Clear" parent="Common.FormInput">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">@dimen/common_form_paddingTop</item>
        <item name="android:paddingBottom">@dimen/common_form_paddingBottom</item>
    </style>
    <style name="Common.FormInput.Clear.text_right" parent="Common.FormInput.Clear">
        <item name="android:textAlignment">viewEnd</item>
    </style>
    <style name="Common.FormInput.Clear.text_left" parent="Common.FormInput.Clear">
        <item name="android:textAlignment">viewStart</item>
    </style>
    <style name="Common.FormInput.Clear.dark" parent="Common.FormInput.Clear">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/common_textHint_dark</item>
    </style>


    <!-- Right Icon -->
    <style name="Common.FormSubIcon">
        <item name="android:layout_marginRight">@dimen/common_form_padding_horizontal</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">@dimen/common_form_padding_horizontal</item>
        <item name="android:layout_gravity">center</item>
    </style>


</resources>