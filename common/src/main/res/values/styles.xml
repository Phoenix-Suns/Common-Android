<resources>

    <style name="Common.Theme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!--font mặc định-->
        <item name="android:typeface">serif</item>
        <!--Apply All TextView-->
        <item name="android:textViewStyle">@style/Common.text_body.light</item>
        <!--<item name="android:buttonStyle">@style/Common.button</item>-->
        <!--<item name="actionBarTabTextStyle"></item>-->
        <item name="android:actionBarStyle">@style/Common.Toolbar</item>

        <!--<item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>-->

        <!-- Sử dụng Appcompat V7 Properties -->
        <item name="colorPrimary">@color/common_primary</item>
        <item name="colorPrimaryDark">@color/common_primary</item>
        <item name="colorAccent">@color/common_accent</item>
        <item name="colorControlActivated">@color/common_control_activated</item>
        <item name="colorControlHighlight">@color/common_controlBackground_highLight</item>


        <!-- Sử dụng API v21 Properties -->
        <item name="android:colorPrimary">@color/common_primary</item>
        <item name="android:colorPrimaryDark">@color/common_primary</item>
        <item name="android:windowBackground">@color/common_background</item>
        <item name="android:navigationBarColor">@color/common_navigationBar</item>
        <item name="android:colorAccent">@color/common_accent</item>

        <item name="android:colorBackground">@color/common_background</item>
        <item name="android:colorForeground">@color/common_foreground</item>
        <item name="android:textColorPrimaryInverse">@color/common_textPrimary_dark</item>
        <!-- Status Bar trong suốt, không có height -->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
    </style>


    <!-- Base application theme. -->
    <style name="Common" parent="Common.Theme.Base">

    </style>
    <style name="Common.Theme" parent="Common">

    </style>


    <!--đường cách ngang-->
    <style name="Common.DividerHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/common_textDividers_light</item>
    </style>


    <!--App compat Popup Dim-->
    <style name="Common.Dialog.Dim" parent="@style/Theme.AppCompat.Dialog">
        <!--no action bar-->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--App compat Popup Transparent-->
    <style name="Common.Dialog.Transparent" parent="@style/Theme.AppCompat.Dialog">
        <!--no action bar-->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--Top Notification-->
    <style name="Common.Badges">
        <item name="android:background">@drawable/bg_badges</item>
        <item name="android:paddingBottom">@dimen/common_spacing_xsmall</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingTop">@dimen/common_spacing_xsmall</item>
        <item name="android:textColor">@color/common_white</item>
        <item name="android:textSize">@dimen/common_text_overLine</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Menu Context -->
    <style name="Common.PopupMenu" parent="Widget.AppCompat.Light.PopupMenu">
        <!--màu chữ-->
        <item name="android:textColorPrimary">@color/common_textPrimary_light</item>
        <!-- màu Menu Icon -->
        <item name="android:textColorSecondary">@color/common_textSecondary_light</item>

        <item name="android:background">@color/common_background</item>
    </style>


    <!-- ToolBar -->
    <style name="Common.Toolbar">
        <!--màu chữ title-->
        <item name="android:textColorPrimary">@color/common_textAccent_light</item>
        <!-- màu Menu Icon -->
        <item name="android:textColorSecondary">@color/common_textAccent_light</item>

        <!-- Support library compatibility -->
        <item name="android:background">?attr/colorPrimary</item>
        <!--<item name="backgroundStacked"></item>
        <item name="backgroundSplit"></item>-->
    </style>


    <!-- Floating Action Button -->
    <style name="Common.Fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/common_fab_margin</item>
        <!--<item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>-->
    </style>

</resources>
