<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CollapsingImageBehavior">
        <attr name="collapsedTarget" format="integer"></attr>
    </declare-styleable>

    <!--Thuộc tính Custom Button-->
    <declare-styleable name="attrsCustomButton">
        <attr name="title" format="string" />
        <attr name="textPosition" format="enum">
            <enum name="left" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="RotateLoadingView">
        <attr name="loading_width" format="dimension" />
        <attr name="loading_color" format="color" />
        <attr name="shadow_position" format="integer" />
        <attr name="loading_speed" format="integer" />
    </declare-styleable>

    <declare-styleable name="MultipleStateViewGroup">
        <attr name="empty_id" format="reference|enum" />
        <attr name="loading_center_id" format="reference|enum" />
        <attr name="loading_bottom_id" format="reference|enum" />
        <attr name="recycler_view_id" format="reference|enum" />
        <attr name="SwipeRefreshLayout_id" format="reference|enum" />
    </declare-styleable>

    <declare-styleable name="DotsIndicator">
        <attr name="dotsColor" format="color"/>
        <attr name="selectedDotColor" format="color"/>
        <attr name="dotsSize" format="dimension"/>
        <attr name="dotsSpacing" format="dimension"/>
    </declare-styleable>
</resources>
